@model XeMay.Models.OrderViewModel

<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text product-more">
                    <a href="/"><i class="fa fa-home"></i>Trang chủ</a>
                    <a href="/gio-hang">Giỏ hàng</a>
                    <span>Đặt hàng</span>
                </div>
            </div>
        </div>
    </div>
</div>

<form action="/Cart/Checkout" method="post" class="checkout-form">
    <section class="checkout-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-7">
                    <h4>Thông tin </h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <label for="fir">Họ và tên<span>*</span></label>
                            <input id="fname" type="text" asp-for="OrderName" value="" placeholder="Họ và tên" style="margin-right:20px;">
                        </div>
                        <div class="col-lg-6">
                            <label for="last">Số điện thoại<span>*</span></label>
                            <input id="lname" type="number" asp-for="OrderPhone" value="" placeholder="Số điện thoại">
                        </div>
                        <div class="col-lg-6">
                            <label for="cun-name">Email</label>
                            <input id="lname" type="email" asp-for="OrderEmail" value="" placeholder="Email">
                        </div>
                        <div class="col-lg-6">
                            <label for="cun-name">Địa chỉ</label>
                            <input id="lname" type="text" asp-for="OrderAddress" value="" placeholder="Địa chỉ">
                        </div>
                        <div class="col-lg-12">
                            <label for="cun-name">Ghi chú</label>
                            <input id="lname" type="text" asp-for="OrderNote" value="" placeholder="Ghi chú">
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="place-order">
                        <h4>Thông tin đơn hàng</h4>
                        <div class="order-total">
                            <ul class="order-table">
                                <li class="fw-normal">Phí vận chuyển  <span>0</span></li>
                                <li class="total-price">Tổng tiền <span class="lbl_total"></span></li>
                            </ul>                          
                            <div class="order-btn">
                                <button type="submit" class="site-btn place-btn">Place Order</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
