@model XeMay.Models.ProductViewModel
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    var ListRelatedProduct = (List<XeMay.Model.Product>)ViewBag.ListRelatedProduct;
    var category = (XeMay.Model.Category)ViewBag.category;
}

<!-- Breadcrumb Section Begin -->
<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text product-more">
                    <a href="/"><i class="fa fa-home"></i> Trang chủ</a>
                    <a href="/shop">Shop</a>
                    <span>@Model.Name</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section Begin -->
<section class="product-shop spad page-details">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="product-pic-zoom">
                            <img class="product-big-img" src="@Model.Logo" alt="">
                            <div class="zoom-icon">
                                <i class="fa fa-search-plus"></i>
                            </div>
                        </div>
                        <div class="product-thumbs">
                            <div class="product-thumbs-track ps-slider owl-carousel">
                                <div class="pt active" data-imgbigurl="@Model.Logo">
                                    <img src="@Model.Logo" alt="">
                                </div>
                                @if (Model.Images.Count() > 0)
                                {
                                    foreach (var item in Model.Images)
                                    {
                                        <div class="pt" data-imgbigurl="@item.Path">
                                            <img src="@item.Path" alt="">
                                        </div>
                                    }
                                }


                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="product-details">
                            <div class="pd-title">
                                <span>@Model.CategotyName</span>
                                <h3>@Model.Name</h3>
                                <a href="#" class="heart-icon"><i class="icon_heart_alt"></i></a>
                            </div>
                            <div class="pd-rating">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star-o"></i>
                                <span>(5)</span>
                            </div>
                            <div class="pd-desc">
                                <p>
                                    @Model.Description
                                </p>
                                @if (Model.PriceDiscount > 0)
                                {
                                    <h4>@Model.PriceDiscount<span>@Model.Price</span></h4>
                                }
                                else
                                {
                                    <h4>@Model.Price</h4>
                                }
                            </div>

                            <div class="quantity">
                                <div >
                                    <button class="btn btn-reduce qty-decrease-product ">-</button>

                                    <input type="text" id="input-quantity" style="width: 50px; text-align: center;" value="1">

                                    <button class="btn btn-increase  qty-increase-product">+</button>
                                </div>
                                <a href="#" data-id="@Model.Id" class="primary-btn pd-cart btn-add-cart">Thêm giỏ hàng</a>
                            </div>                       
                        </div>
                    </div>
                </div>
                <div class="product-tab">
                    <div class="tab-item">
                        <ul class="nav" role="tablist">
                            <li>
                                <a class="active" data-toggle="tab" href="#tab-1" role="tab">Thông tin chi tiết</a>
                            </li>

                        </ul>
                    </div>
                    <div class="tab-item-content">
                        <div class="tab-content">
                            <div class="tab-pane fade-in active" id="tab-1" role="tabpanel">
                                <div class="product-content">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            @Html.Raw(Model.Detail)
                                        </div>

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Product Shop Section End -->
<!-- Related Products Section End -->
<div class="related-products spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Sản phẩm liên quan</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @if (ListRelatedProduct.Count() > 0)
            {
                foreach (var item in ListRelatedProduct)
                {
            <div class="col-lg-3 col-sm-6">
                <div class="product-item">
                    <div class="pi-pic">
                        <img src="@item.Logo" alt="">

                        @if (item.IsNew == true)
                        {
                            <div class="sale">Sale</div>
                        }

                        <div class="icon">
                            <i class="icon_heart_alt"></i>
                        </div>
                        <ul>
                            <li class="w-icon active"><a href="#" class="btn-add-cart-2" data-id="@item.Id"><i class="icon_bag_alt "></i></a></li>
                            <li class="quick-view"><a href="/san-pham/@item.Url/@item.Id">+ Chi tiết</a></li>
                            <li class="w-icon"><a href="#"><i class="fa fa-random"></i></a></li>
                        </ul>
                    </div>
                    <div class="pi-text">
                        <a href="/san-pham/@item.Url/@item.Id">
                            <h5>@item.Name</h5>
                        </a>
                        @if (item.PriceDiscount > 0)
                        {


                            <div class="product-price">
                                @item.PriceDiscount
                                <span>@item.Price</span>
                            </div>
                        }
                        else
                        {
                            <div class="product-price">
                                @item.Price
                            </div>
                        }

                    </div>
                </div>
            </div>
                }
            }
    </div>
</div>
</div>
<!-- Related Products Section End -->
