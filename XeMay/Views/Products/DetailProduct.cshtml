@model XeMay.Models.ProductViewModel
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    var ListRelatedProduct = (List<XeMay.Data.Product>)ViewBag.ListRelatedProduct;
    var category = (XeMay.Data.Category)ViewBag.category;
}

<!--main area-->
<main id="main" class="main-site">

    <div class="container">

        <div class="wrap-breadcrumb">
            <ul>
                <li class="item-link"><a href="#" class="link">Trang chủ</a></li>
                <li class="item-link"><span>@Model.Name</span></li>
            </ul>
        </div>
        <div class="row">

            <div class="col-lg-9 col-md-8 col-sm-8 col-xs-12 main-content-area">
                <div class="wrap-product-detail">
                    <div class="detail-media">
                        <div class="product-gallery">
                            <ul class="slides">

                                <li data-thumb="@Model.Logo">
                                    <img style="width: 380px;" src="@Model.Logo" alt="product thumbnail" />
                                </li>
                                @if (Model.Images.Count() > 0)
                                {
                                    foreach (var item in Model.Images)
                                    {
                                        <li data-thumb="@item.Path">
                                            <img style="width: 380px;" src="@item.Path" alt="product thumbnail" />
                                        </li>
                                    }
                                }

                            </ul>
                        </div>
                    </div>
                    <div class="detail-info">
                        <div class="product-rating">
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <a href="#" class="count-review">(05 review)</a>
                        </div>
                        <h2 class="product-name">@Model.Name</h2>
                        <div class="wrap-social">
                            <a class="link-socail" href="#"><img src="/assets/images/social-list.png" alt="" /></a>
                        </div>
                        <div class="wrap-price"><span class="product-price">@Model.Price</span></div>
                        <div class="stock-info in-stock">
                            @if (Model.Status == 1)
                            {
                                <p class="availability">Trạng thái: <b>Còn hàng</b></p>

                            }
                            else
                            {
                                <p class="availability">Trạng thái: <b>Hết hàng</b></p>

                            }
                        </div>
                        <div class="quantity">
                            <span>Số lượng:</span>
                            <div class="quantity-input">
                                <input type="text"  id="input-quantity" name="product-quatity" value="1" data-max="120" pattern="[0-9]*" />

                                <button class="btn btn-reduce qty-decrease-product "></button>
                                <button class="btn btn-increase  qty-increase-product"></button>
                            </div>
                        </div>
                        <div class="wrap-butons">
                            <button data-id="@Model.Id"  class="btn add-to-cart btn-add-cart">Thêm giỏ hàng</button>
                          
                        </div>
                    </div>
                    <div class="advance-info">
                        <div class="tab-control normal">
                            <a href="#description" class="tab-control-item active">Mô tả</a>
                        </div>
                        <div class="tab-contents">
                            <div class="tab-content-item active" id="description">
                                @Html.Raw(Model.Detail)
                            </div>
                           
                        </div>
                    </div>
                </div>
            </div><!--end main products area-->

            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12 sitebar">
                <div class="widget widget-our-services ">
                    <div class="widget-content">
                        <ul class="our-services">

                            <li class="service">
                                <a class="link-to-service" href="#">
                                    <i class="fa fa-truck" aria-hidden="true"></i>
                                    <div class="right-content">
                                        <b class="title">Free Shipping</b>
                                        <span class="subtitle">Miễn phí ship</span>
                                    </div>
                                </a>
                            </li>

                            <li class="service">
                                <a class="link-to-service" href="#">
                                    <i class="fa fa-gift" aria-hidden="true"></i>
                                    <div class="right-content">
                                        <b class="title">Special Offer</b>
                                        <span class="subtitle">Nhiều ưu đãi</span>
                                    </div>
                                </a>
                            </li>

                            <li class="service">
                                <a class="link-to-service" href="#">
                                    <i class="fa fa-reply" aria-hidden="true"></i>
                                    <div class="right-content">
                                        <b class="title">Order Return</b>
                                        <span class="subtitle">Hỗ trợ hoàn sau 7 ngày</span>
                                        <p class="desc"></p>
                                    </div>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div><!-- Categories widget-->

                <div class="widget mercado-widget widget-product">
                    <h2 class="widget-title">Sản phẩm hot</h2>
                    <div class="widget-content">
                        <ul class="products">

                            @if (ListRelatedProduct.Count() > 0)
                            {
                                foreach (var item in ListRelatedProduct)
                                {
                                    <li class="product-item">
                                        <div class="product product-widget-style">
                                            <div class="thumbnnail">
                                                <a href="/san-pham/@item.Url/@item.Id" title="Radiant-360 R6 Wireless Omnidirectional Speaker [White]">
                                                    <figure><img src="@item.Logo" alt="" /></figure>
                                                </a>
                                            </div>
                                            <div class="product-info">
                                                <a href="/san-pham/@item.Url/@item.Id" class="product-name"><span>@item.Name</span></a>
                                                @if (item.PriceDiscount > 0)
                                                {
                                                    <div class="wrap-price"><span class="product-price">@item.PriceDiscount</span></div>

                                                }
                                                else
                                                { <div class="wrap-price"><span class="product-price">@item.Price</span></div>

                                                }
                                            </div>
                                        </div>
                                    </li>
                                }
                            }


                                </ul>
                    </div>
                </div>

            </div><!--end sitebar-->

            <div class="single-advance-box col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="wrap-show-advance-info-box style-1 box-in-site">
                    <h3 class="title-box">Sản phẩm liên quan</h3>
                    <div class="wrap-products">
                        <div class="products slide-carousel owl-carousel style-nav-1 equal-container" data-items="5" data-loop="false" data-nav="true" data-dots="false" data-responsive='{"0":{"items":"1"},"480":{"items":"2"},"768":{"items":"3"},"992":{"items":"3"},"1200":{"items":"5"}}'>
                            @if (ListRelatedProduct.Count() > 0)
                            {
                                foreach (var item in ListRelatedProduct)
                                {
                                    <div class="product product-style-2 equal-elem ">
                                        <div class="product-thumnail">
                                            <a href="/san-pham/@item.Url/@item.Id" title="@item.Name">
                                                <figure><img src="@item.Logo" width="800" height="800" alt="@item.Name" /></figure>
                                            </a>
                                            @if (item.PriceDiscount > 0)
                                            {
                                                <div class="group-flash">
                                                    <span class="flash-item sale-label">sale</span>
                                                </div>
                                            }
                                            <div class="wrap-btn">
                                                <a href="/san-pham/@item.Url/@item.Id" class="function-link">quick view</a>
                                            </div>
                                        </div>
                                        <div class="product-info">
                                            <a href="/san-pham/@item.Url/@item.Id" class="product-name"><span>@item.Name</span></a>
                                            @if (item.PriceDiscount > 0)
                                            {
                                                <div class="wrap-price"><ins><p class="product-price">@item.PriceDiscount</p></ins> <del><p class="product-price">@item.Price</p></del></div>
                                            }
                                            else
                                            {
                                                <div class="wrap-price"><ins><p class="product-price">@item.Price</p></ins></div>

                                            }
                                        </div>
                                    </div>

                                }
                            }

                        </div>
                    </div><!--End wrap-products-->
                </div>
            </div>

        </div><!--end row-->

    </div><!--end container-->

</main>
<!--main area-->
