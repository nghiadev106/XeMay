@{
    ViewData["Title"] = "Trang chủ";

    //Danh sách slides
    var ListSlides = (List<XeMay.Data.Slide>)ViewBag.ListSlides;

    //Danh sách danh mục sản phẩm
    var listCategories = (List<XeMay.Data.Category>)ViewBag.ListCategories;
    //Danh sách sản phẩm hot
    var ListProductHot = (List<XeMay.Data.Product>)ViewBag.ListProductHot;
    //Danh sách sản phẩm mới
    var ListProductNew = (List<XeMay.Data.Product>)ViewBag.ListProductNew;

    //Danh sách tin tức
    var ListNews = (List<XeMay.Data.News>)ViewBag.ListNews;
}

<main id="main">
    <div class="container">

        <!--MAIN SLIDE-->
        <div class="wrap-main-slide">
            <div class="slide-carousel owl-carousel style-nav-1" data-items="1" data-loop="1" data-nav="true" data-dots="false">
                @if (ListSlides.Count() > 0)
                {
                    foreach (var item in ListSlides)
                    {
                        <div class="item-slide">
                            <img src="@item.Logo" alt="" class="img-slide">
                          
                        </div>
                    }
                }
                    </div>
        </div>

        <!--BANNER-->

        <div class="wrap-banner style-twin-default">
            @if (ListSlides.Count() > 0)
            {
                foreach (var item in ListSlides.Take(2).ToList())
                {
                    <div class="banner-item">
                        <a href="#" class="link-banner banner-effect-1">
                            <figure><img src="@item.Logo" alt="" width="580" height="190"></figure>
                        </a>
                    </div>
                }
            }
                  
                </div>
        <!--On Sale-->
        <div class="wrap-show-advance-info-box style-1 has-countdown">
            <h3 class="title-box">Sản phẩm nổi bật</h3>
            <div class="wrap-countdown mercado-countdown" data-expire="2020/12/12 12:34:56"></div>
            <div class="wrap-products slide-carousel owl-carousel style-nav-1 equal-container " data-items="5" data-loop="false" data-nav="true" data-dots="false" data-responsive='{"0":{"items":"1"},"480":{"items":"2"},"768":{"items":"3"},"992":{"items":"4"},"1200":{"items":"5"}}'>

                @if (ListProductHot.Count() > 0)
                {
                    foreach (var item in ListProductHot)
                    {
                        <div class="product product-style-2 equal-elem ">
                            <div class="product-thumnail">
                                <a href="/san-pham/@item.Url/@item.Id" title="@item.Name">
                                    <figure><img src="@item.Logo" width="800" height="800" alt="@item.Name"></figure>
                                </a>
                                @if (item.PriceDiscount > 0)
                                {
                                    <div class="group-flash">
                                        <span class="flash-item sale-label">sale</span>
                                    </div>
                                }
                                    <div class="wrap-btn">
                                        <a href="/san-pham/@item.Url/@item.Id" class="function-link">quick view</a>
                                    </div>
                                </div>
                            <div class="product-info">
                                <a href="/san-pham/@item.Url/@item.Id" class="product-name"><span>@item.Name</span></a>
                                @if (item.PriceDiscount > 0)
                                {
                                    <div class="wrap-price"><ins><p class="product-price">@item.PriceDiscount</p></ins> <del><p class="product-price">@item.Price</p></del></div>
                                }
                                else
                                {
                                    <div class="wrap-price"><ins><p class="product-price">@item.Price</p></ins></div>

                                }
                            </div>
                        </div>

                        }
                    }

            </div>
        </div>

        <!--Latest Products-->
        <div class="wrap-show-advance-info-box style-1">
            <h3 class="title-box">Sản phẩm mới nhất</h3>
            <div class="wrap-top-banner">
                <a href="#" class="link-banner banner-effect-2">
                    <figure><img src="/assets/images/digital-electronic-banner.jpg" width="1170" height="240" alt=""></figure>
                </a>
            </div>
            <div class="wrap-products">
                <div class="wrap-product-tab tab-style-1">
                    <div class="tab-contents">
                        <div class="tab-content-item active" id="digital_1a">
                            <div class="wrap-products slide-carousel owl-carousel style-nav-1 equal-container" data-items="5" data-loop="false" data-nav="true" data-dots="false" data-responsive='{"0":{"items":"1"},"480":{"items":"2"},"768":{"items":"3"},"992":{"items":"4"},"1200":{"items":"5"}}'>

                                @if (ListProductNew.Count() > 0)
                                {
                                    foreach (var item in ListProductNew)
                                    {
                                        <div class="product product-style-2 equal-elem ">
                                            <div class="product-thumnail">
                                                <a href="/san-pham/@item.Url/@item.Id" title="@item.Name">
                                                    <figure><img src="@item.Logo" width="800" height="800" alt="@item.Name"></figure>
                                                </a>
                                                @if (item.PriceDiscount > 0)
                                                {
                                                    <div class="group-flash">
                                                        <span class="flash-item sale-label">sale</span>
                                                    </div>
                                                }
                                                <div class="wrap-btn">
                                                    <a href="/san-pham/@item.Url/@item.Id" class="function-link">quick view</a>
                                                </div>
                                            </div>
                                            <div class="product-info">
                                                <a href="/san-pham/@item.Url/@item.Id" class="product-name"><span>@item.Name</span></a>
                                                @if (item.PriceDiscount > 0)
                                                {
                                                    <div class="wrap-price"><ins><p class="product-price">@item.PriceDiscount</p></ins> <del><p class="product-price">@item.Price</p></del></div>
                                                }
                                                else
                                                {
                                                    <div class="wrap-price"><ins><p class="product-price">@item.Price</p></ins></div>

                                                }
                                            </div>
                                        </div>

                                    }
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--Product Categories-->
        <div class="wrap-show-advance-info-box style-1">
            <h3 class="title-box">Tin tức</h3>
            <div class="wrap-top-banner">
                <a href="#" class="link-banner banner-effect-2">
                    <figure><img src="/assets/images/fashion-accesories-banner.jpg" width="1170" height="240" alt=""></figure>
                </a>
            </div>
            <div class="wrap-products">
                <div class="wrap-product-tab tab-style-1">
                    <div class="tab-contents">
                        <div class="tab-content-item active" id="digital_1a">
                            <div class="wrap-products slide-carousel owl-carousel style-nav-1 equal-container" data-items="5" data-loop="false" data-nav="true" data-dots="false" data-responsive='{"0":{"items":"1"},"480":{"items":"2"},"768":{"items":"3"},"992":{"items":"4"},"1200":{"items":"5"}}'>

                                @if (ListNews.Count() > 0)
                                {
                                    foreach (var item in ListNews)
                                    {
                                        <div class="product product-style-2 equal-elem ">
                                            <div class="product-thumnail">
                                                <a href="/tin-tuc/@item.Url/@item.Id" title="@item.Name">
                                                    <figure><img src="@item.Logo" width="800" height="800" alt="@item.Name"></figure>
                                                </a>
                                                <div class="wrap-btn">
                                                    <a href="/tin-tuc/@item.Url/@item.Id" class="function-link">quick view</a>
                                                </div>
                                            </div>
                                            <div class="product-info">
                                                <a href="/tin-tuc/@item.Url/@item.Id" class="product-name"><span>@item.Name</span></a>
                                            </div>
                                        </div>

                                    }
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</main>