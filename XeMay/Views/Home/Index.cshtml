@{
    ViewData["Title"] = "Trang chủ";

    //Danh sách slides
    var ListSlides = (List<XeMay.Model.Slide>)ViewBag.ListSlides;

    //Danh sách danh mục sản phẩm
    var listCategories = (List<XeMay.Model.Category>)ViewBag.ListCategories;
    //Danh sách sản phẩm hot
    var ListProductHot = (List<XeMay.Model.Product>)ViewBag.ListProductHot;
    //Danh sách sản phẩm mới
    var ListProductNew = (List<XeMay.Model.Product>)ViewBag.ListProductNew;

    //Danh sách tin tức
    var ListNews = (List<XeMay.Model.News>)ViewBag.ListNews;
}

<!-- Hero Section Begin -->
<section class="hero-section">
    <div class="hero-items owl-carousel">
        @if (ListSlides.Count() > 0)
        {
            foreach (var item in ListSlides)
            {
                <div class="single-hero-items set-bg" data-setbg="@item.Logo">
                    <div class="container">
                       
                    </div>
                </div>
                }
            }
            </div>
</section>
<!-- Hero Section End -->

<!-- Women Banner Section Begin -->
<section class="women-banner spad">
    <div class="container-fluid">
        <div class="row">
            
            <div class="col-lg-10 offset-lg-1">
                <div class="filter-control">
                    <ul>
                        <li class="active">Sản phẩm nổi bật</li>                     
                    </ul>
                </div>
                <div class="product-slider owl-carousel">

                    @if (ListProductHot.Count() > 0)
                    {
                        foreach (var item in ListProductHot)
                        {
                            <div class="product-item">
                                <div class="pi-pic">
                                    <img src="@item.Logo" alt="">
                                    @if (item.PriceDiscount > 0)
                                    {
                                        <span class="label">New</span>
                                    }
                                    @if (item.IsNew == true)
                                    {
                                        <div class="sale">Sale</div>
                                    }

                                    <div class="icon">
                                        <i class="icon_heart_alt"></i>
                                    </div>
                                    <ul>
                                        <li class="w-icon active"><a href="#" class="btn-add-cart-2"  data-id="@item.Id"><i class="icon_bag_alt "></i></a></li>
                                        <li class="quick-view"><a href="/san-pham/@item.Url/@item.Id">+ Chi tiết</a></li>
                                        <li class="w-icon"><a href="#"><i class="fa fa-random"></i></a></li>
                                    </ul>
                                </div>
                                <div class="pi-text">
                                    <a href="/san-pham/@item.Url/@item.Id">
                                        <h5>@item.Name</h5>
                                    </a>
                                    @if (item.PriceDiscount > 0)
                                    {


                                        <div class="product-price">
                                            @item.PriceDiscount
                                            <span>@item.Price</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="product-price">
                                            @item.Price
                                        </div>
                                    }

                                </div>
                            </div>
                        }
                    }

                </div>
            </div>
        </div>  
    </div>
</section>

