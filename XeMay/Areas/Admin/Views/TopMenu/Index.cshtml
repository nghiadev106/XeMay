@{
    Layout = "_LayoutAdmin";
    var lstTopMenu = (List<XeMay.Models.TopMenuViewModel>)ViewBag.lstTopMenu;
}

<input type="hidden" id="success" value="@TempData["success"]" />
<input type="hidden" id="warning" value="@TempData["warning"]" />
<input type="hidden" id="error" value="@TempData["error"]" />

<div class="container-fluid">
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active">Danh sách Menu</li>
    </ol>
    <div class="card mb-12">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6 col-xs-12">
                    <a class="btn btn-success" asp-action="Create" asp-controller="TopMenu" asp-area="admin">Tạo mới</a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                @if (lstTopMenu.Count() > 0)
                {
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Hình ảnh</th>
                                <th>Tên</th>
                                <th>Link</th>
                                <th>Thứ tự</th>
                                <th>Trạng thái</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var stt = 0;
                                @foreach (var item in lstTopMenu)
                                {
                                    <tr>
                                        <td>@Html.Raw(stt = stt + 1)</td>
                                        <td><img src="@item.Logo" style="width:60px;" /></td>
                                        <td>@item.Name</td>
                                        <td>@item.Link</td>
                                        <td>@item.DisplayOrder</td>
                                        @if (item.Status == 1)
                                        {
                                            <td><span class="btn-success">Hiển thị</span></td>
                                        }
                                        else
                                        {
                                            <td><span class="btn-danger">Ẩn</span></td>
                                        }
                                        <td>
                                            <a href="/Admin/TopMenu/Edit/@item.Id" class="btn btn-primary glyphicon glyphicon-pencilt">Sửa</a>
                                            <a class="btn btn-danger glyphicon glyphicon-trash" onclick="return confirm('Bạn có muốn xóa không?');" href="@Url.Action("Delete","TopMenu")/@item.Id">Xóa</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <span>Không có TopMenu nào</span>
                }

            </div>
        </div>
    </div>
</div>